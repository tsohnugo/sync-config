# Enable job 2025-05-08
name: tsohnugo gitcode repos mirror periodic job

on:
  pull_request:
    paths:
    - '.github/workflows/**'
  schedule:
    # Runs at 01:00 UTC (9:00 AM Beijing) every day
    - cron:  '*/5 * * * *'

jobs:
  build:

    runs-on: ubuntu-latest

    steps:

      - name: Mirror the github/tsohnugo org repos to gitcode/tsohnugo.
            uses: Yikun/hub-mirror-action@v1.4
            with:
              src: github/tsohnugo
              dst: gitcode/tsohnugo
              dst_key: ${{ secrets.GITCODE_SYNC_KEY }}
              dst_token:  ${{ secrets.GITCODE_SYNC_TOKEN }}
              clone_style: ssh
              force_update: true
              debug: true
